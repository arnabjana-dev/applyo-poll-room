generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Poll {
  id        String   @id @default(uuid())
  question  String
  createdAt DateTime @default(now())

  options Option[]
  votes   Vote[]

  @@map("polls")
}

model Option {
  id        String   @id @default(uuid())
  text      String
  pollId    String
  createdAt DateTime @default(now())

  poll  Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes Vote[]

  @@index([pollId])
  @@map("options")
}

model Vote {
  id        String   @id @default(uuid())
  pollId    String
  optionId  String
  voterId   String
  ipAddress String?
  createdAt DateTime @default(now())

  poll   Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option Option @relation(fields: [optionId], references: [id], onDelete: Cascade)

  // for single vote per poll per voter
  @@unique([pollId, voterId])
  @@index([pollId])
  @@index([optionId])
  @@index([ipAddress])
  @@map("votes")
}
